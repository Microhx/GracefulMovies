<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nest_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.xing.project.movie.ui.activity.AboutActivity"
        tools:showIn="@layout/activity_about">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_16">

            <com.xw.repo.VectorCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/welcome"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/sp_16"
                app:drawableLeftCompat="@drawable/svg_ic_smile"
                app:tintDrawableInTextColor="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/welcome_detail"/>

            <com.xw.repo.VectorCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/contact_me"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/sp_16"
                app:drawableLeftCompat="@drawable/svg_ic_contact"
                app:tintDrawableInTextColor="true"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mail_iv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_margin="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:onClick="onClick"
                app:srcCompat="@drawable/svg_ic_gmail"/>

            <com.xw.repo.VectorCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/open_source_address"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/sp_16"
                app:drawableLeftCompat="@drawable/svg_ic_source"
                app:tintDrawableInTextColor="true"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/github_iv"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_margin="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_16"
                android:onClick="onClick"
                app:srcCompat="@drawable/svg_ic_github"/>

            <com.xw.repo.VectorCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/open_source_permission"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/sp_16"
                app:drawableLeftCompat="@drawable/svg_ic_license"
                app:tintDrawableInTextColor="true"/>

            <TextView
                android:id="@+id/license_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:onClick="onClick"
                tools:text="@string/license"/>

            <com.xw.repo.VectorCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_4"
                android:gravity="center"
                android:text="@string/thanks"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/sp_16"
                app:drawableLeftCompat="@drawable/svg_ic_flower"
                app:tintDrawableInTextColor="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/thanks_list"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
