<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_cancel"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/sp_15"
        android:layout_margin="@dimen/dp_16"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toStartOf="@id/id_tv_cancel"
        android:background="@drawable/search_et_title_bg"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@id/id_tv_cancel"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/ic_small_search"
            android:layout_centerVertical="true"
            android:id="@+id/id_search_view"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/icon_delete"
            android:id="@+id/id_delete_view"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/id_search_view"
            android:layout_toStartOf="@id/id_delete_view"
            android:textSize="@dimen/sp_14"
            android:background="@null"
            android:lines="1"
            android:hint="@string/search_movie"
            android:id="@+id/id_et_content"
            android:textColor="@color/color_background"
            android:paddingStart="@dimen/dp_4"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>