<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="@dimen/dp_100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/id_image"
        android:src="@drawable/movie"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/dp_132"/>

    <TextView
        android:layout_width="0dp"
        android:lines="1"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toEndOf="@id/id_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/id_image"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/id_tv_content"
        android:layout_marginStart="@dimen/dp_8"
        android:textColor="@color/color_text"
        android:text="五月天人生无限公司"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_tv_content"
        app:layout_constraintStart_toStartOf="@id/id_tv_content"
        android:text="Mayday Life"
        android:id="@+id/id_tv_foreign_name"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_tv_foreign_name"
        app:layout_constraintStart_toStartOf="@id/id_tv_content"
        android:text="言情、喜剧"
        android:textSize="@dimen/sp_12"
        android:id="@+id/id_tv_type"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_tv_type"
        app:layout_constraintStart_toStartOf="@id/id_tv_type"
        android:text="2019-02-12 上映"
        android:id="@+id/id_tv_time"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/id_tv_time"
        app:layout_constraintStart_toStartOf="@id/id_tv_time"
        android:text="播放次数:23089次"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/id_tv_count"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>