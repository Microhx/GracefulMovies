<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_common_bg_drawable">

    <ImageView
        android:id="@+id/id_default_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/id_remind"
        android:layout_width="8dp"
        android:visibility="gone"
        android:layout_height="8dp"
        android:layout_marginLeft="36dp"
        android:layout_alignTop="@id/id_default_icon"
        android:background="@drawable/red_circle_radius_8dp" />

    <ImageView
        android:id="@+id/id_right_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:src="@drawable/img_arrow_right" />

    <TextView
        android:id="@+id/id_right_content"
        android:layout_width="120dp"
        android:layout_toLeftOf="@id/id_right_icon"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:gravity="right"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/id_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@id/id_right_content"
        android:layout_toRightOf="@id/id_default_icon"
        android:textColor="#494949"
        android:textSize="15sp" />

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_default_icon"
        android:background="#e9e9e9" />

</RelativeLayout>